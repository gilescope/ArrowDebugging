{
    "icon": "arrowkeys.png",
    "repository": "https://github.com/gilescope/arrowdebugging",
    "publisher": "gilescope",
    "name": "arrowdebugging",
    "displayName": "Arrow Key debugging",
    "description": "Use alt + arrow keys to control the debugger",
    "version": "0.3.5",
    "engines": {
        "vscode": "^1.38.0"
    },
    "categories": [
        "Keymaps"
    ],
    "contributes": {
        "keybindings": [
            {
                "key": "-workbench.action.previousEditor"
            },
            {
                "key": "-workbench.action.nextEditor"
			},
            {
                "key": "alt+up",
                "command": "workbench.action.debug.continue",
                "when": "inDebugMode"
            },
            {
                "key": "alt+left",
                "command": "workbench.action.debug.stepOut",
                "when": "inDebugMode"
            },
            {
                "key": "alt+down",
                "command": "workbench.action.debug.stepOver",
                "when": "inDebugMode"
            },
            {
                "key": "alt+right",
                "command": "workbench.action.debug.stepInto",
                "when": "inDebugMode"
            },
            {
                "key": "alt+up",
                "command": "workbench.action.debug.start",
                "when": "!inDebugMode"
            }
        ]
    },
    "dependencies": {
        "vsce": "^1.74.0"
    }
}
